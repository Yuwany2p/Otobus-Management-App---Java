<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="236.0" prefWidth="459.0" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-border-color: gray;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gojalan.EditUserController">
   <VBox alignment="CENTER" layoutX="1.0" layoutY="1.0" prefHeight="314.0" prefWidth="468.0" spacing="10">
      <HBox prefHeight="22.0" prefWidth="468.0">
         <children>
            <Region prefHeight="25.0" prefWidth="432.0" />
            <Button fx:id="btnExit" mnemonicParsing="false" onAction="#onExitClick" prefHeight="25.0" prefWidth="26.0" style="-fx-background-color: red;" text="X" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="lblTitle" prefHeight="40.0" prefWidth="156.0" text="Ubah Sandi">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>
      <Region prefHeight="1.0" prefWidth="468.0" />
      <HBox prefHeight="39.0" prefWidth="456.0">
         <children>
            <Region prefHeight="49.0" prefWidth="42.0" />
            <PasswordField fx:id="oldPassword" alignment="CENTER" prefHeight="40.0" prefWidth="375.0" promptText="Sandi Lama" style="-fx-background-radius: 15;">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
         </children>
      </HBox>
      <HBox prefHeight="41.0" prefWidth="456.0">
         <children>
            <Region prefHeight="73.0" prefWidth="42.0" />
            <PasswordField fx:id="newPassword" alignment="CENTER" prefHeight="40.0" prefWidth="375.0" promptText="Sandi Baru" style="-fx-background-radius: 15;">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="456.0">
         <children>
            <Region prefHeight="73.0" prefWidth="44.0" />
            <PasswordField fx:id="confirmPassword" alignment="CENTER" prefHeight="40.0" prefWidth="375.0" promptText="Konfirmasi Sandi" style="-fx-background-radius: 15; -fx-border-radius: 15;">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
         </children>
      </HBox>
      <Region prefHeight="11.0" prefWidth="468.0" />
      <HBox spacing="10">
         <Region prefHeight="40.0" prefWidth="126.0" />
         <Button fx:id="btnSimpan" onAction="#onSimpanClick" prefHeight="29.0" prefWidth="92.0" style="-fx-background-radius: 100;" styleClass="button-hover" stylesheets="@../style/Style.css" text="Simpan" />
         <Region prefHeight="25.0" prefWidth="0.0" />
         <Button fx:id="btnBatal" onAction="#onBatalClick" prefHeight="39.0" prefWidth="92.0" style="-fx-background-color: red; -fx-background-radius: 100;" styleClass="fancy-button" stylesheets="@../style/Style.css" text="Batal">
            <font>
               <Font name="System Bold" size="12.0" />
            </font></Button>
      </HBox>
   </VBox>
</AnchorPane>
